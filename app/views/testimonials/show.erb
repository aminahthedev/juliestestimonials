<h1><%= @testimonial.title %></h1>

<span class="testimonial-date block font-3-4 c-lt-gray"><%= "Written on #{long_form_date(@testimonial.created_at)}." %></span>

<p><%= @testimonial.body %></p>

<ul class="no-bullets no-padding mar-t-2">
  <li class="pipe-separate left">
    <a href="/entries/<%= @testimonial.id %>/edit" class="c-white">Edit</a>
  </li>

  <li class="pipe-separate left">
    <form method="post" action="/entries/<%= @testimonial.id %>" class="inline">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete" class="no-border no-outline no-bg c-white hover-underline">
    </form>
  </li>
</ul>
