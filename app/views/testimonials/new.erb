<h2 class="form-header">Create a Kudo!</h2>
  <div id="testimonial-form">
    <form id="testimonial_form" action="/testimonials" method="post">
      <label>Title:</label>
      <input type="text" name="[title]" placeholder="Title"/>
      <br />
      <label>Kudo Message:</label>
      <textarea type="text" name="[content]" placeholder="Enter your testimonial here..." row="35" column="100"></textarea>
      <br />

      <input type="submit" class="button" value="Submit"/>
    </form>
  </div>

  <%= erb :_errors %>
